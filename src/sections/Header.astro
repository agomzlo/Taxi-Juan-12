<header id="header" class="fixed top-0 grid place-items-center z-50 w-full lg:py-2.5">
    <div class="w-full px-5 lg:px-10 lg:w-[1024px] h-20 flex flex-row justify-between items-center animate-fade">
        <img src="/taxi12.png" class="w-14 lg:w-20 h-auto" alt="">
        <span class="flex flex-row gap-2.5 lg:gap-5">
            <a href="#aboutUs" class="lg:text-lg hover:text-black transition-all">Sobre Nosotros</a>
            <a href="#services" class="lg:text-lg hover:text-black transition-all">Servicios</a>
            <a href="#contactUs" class="lg:text-lg hover:text-black transition-all">Contacto</a>
        </span>
    </div>
</header>

<style>
    header {
        background: transparent;
        animation: header-blur-scroll 0.3s linear both;
        animation-timeline: scroll();
        animation-range: 0 500px;
    }
    @keyframes header-blur-scroll {
        0% {
            backdrop-filter: blur(0px);
            background: transparent;
            color: white;
        }
        100% {
            backdrop-filter: blur(12px);
            background: rgba(255, 255, 255, 0.75);
            color: rgba(0, 0, 0, 0.75);
        }
    }
</style>